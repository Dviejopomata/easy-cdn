  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "env": {
        "NODE_PATH": ".",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "outputCapture": "std",
      // "console": "integratedTerminal",
      "args": ["./src/cli.ts", "serve"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}